extends ../layouts/common
block content
    h1 Register
    if errors
        each error in errors
            .alert.alert-danger=error
    .container        
        form(action="/auth/register",method="POST")
            .form-group
                label(for="email") Email
                input#email.form-control(name="email",type="text", value=values ? values.email : '' )
            .form-group
                label(for="password") Password
                input#password.form-control(type="password",name="password",value=values ? values.password : '')
            .form-group
                label(for="password2") Nhập lại Mật khẩu 
                input#password2.form-control(type="password",name="password2",value=values ? values.password2 : '')
            .form-group
                label(for="name") Name
                input#name.form-control(name="name",type="text", value=values ? values.name : '' )
            .form-group
                label(for="phone") Phone
                input#phone.form-control(type="text",name="phone",value=values ? values.phone : '')
            button.btn.btn-primary Register