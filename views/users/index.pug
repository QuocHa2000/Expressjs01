extends ../layouts/common
block content
    h1 UserList
    a.btn.btn-primary(href="/users/create") New

    form(action="/users/search", method='GET')
        input(type="text",name='q', value=key ) 
        button Search
        
    table.table
        tr
            th Avatar 
            th Name 
            th Phone 
            th Actions
            each user in users
                tr
                    td
                        img(src=user.avatar, alt="",width=32)
                    td=user.name
                    td=user.phone
                    td
                        a.btn.btn-primary(href="/users/"+ user.id) View

 



